<UserControl x:Class="CyberSecurityChatbotGUI.Controls.ActivityLogPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="400" Width="700">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Activity Log" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="350">
                <ItemsControl x:Name="LogItemsControl" />
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
