<UserControl x:Class="CyberSecurityChatbotGUI.Controls.QuizPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CyberSecurityChatbotGUI.Controls"
             Height="Auto" Width="Auto">
    <Grid Margin="20">
        <StackPanel>

            <TextBlock x:Name="QuestionTextBlock" 
                       FontSize="18" FontWeight="Bold" TextWrapping="Wrap"
                       Margin="0,0,0,10" />

            <StackPanel x:Name="AnswersPanel" />

            <Button Content="Submit Answer" 
                    Width="150" Height="40" 
                    Margin="0,20,0,0" 
                    Click="SubmitAnswer_Click"/>

            <TextBlock x:Name="FeedbackTextBlock" 
                       FontSize="16" FontStyle="Italic" 
                       Foreground="DarkGreen" 
                       Margin="0,20,0,0"/>

        </StackPanel>
    </Grid>
</UserControl>
